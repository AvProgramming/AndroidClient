<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="5dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:gravity="center"
                        android:layout_alignParentStart="true">

                    <ImageView
                            android:src="@drawable/ic_baseline_location_on_24"
                            android:padding="5dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:tint="#FF8B55" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="16sp"
                            android:layout_margin="5dp"
                            android:textStyle="bold|normal"
                            android:textColor="#F8554A4A" />

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/changeOrEditAddressBtn"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:padding="1dp"
                        android:gravity="center">

                    <ImageView
                            android:src="@drawable/ic_baseline_add_24"
                            android:padding="1dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:tint="#DD6329" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add/Edit"
                            android:textSize="16sp"
                            android:layout_margin="3dp"
                            android:textStyle="bold|normal"
                            android:textColor="#DD6329" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:padding="0dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/ic_baseline_home_24"
                        app:tint="#FF8B55" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/countryAddressTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spain"
                            android:textSize="17sp"
                            android:textStyle="normal|bold"
                            android:textColor="#F8554A4A" />

                    <TextView
                            android:id="@+id/homeAddressTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calle Lopez Grass 46, 5B, \nMadrid, 28038"
                            android:textAlignment="textStart"
                            android:textSize="13sp"
                            android:textStyle="normal"
                            android:textColor="#F8554A4A"
                            card_view:ignore="RtlCompat" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>